{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "removeComments": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "skipLibCheck": true, /* this will prevent TS errors from happening due to library errors */
    "module": "commonjs"

  },
  "exclude": ["node_modules"],
  "include": ["src/"]

}
